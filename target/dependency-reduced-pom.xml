<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>edu.unt.cerl</groupId>
  <artifactId>RE-PLAN2</artifactId>
  <name>RE-PLAN2</name>
  <version>2.0-SNAPSHOT</version>
  <url>http://maven.apache.org</url>
  <build>
    <resources>
      <resource>
        <directory>${basedir}</directory>
        <includes>
          <include>blankSpace.png</include>
          <include>catchment_Icon.png</include>
          <include>censusBlocks_Icon.png</include>
          <include>countyOutline_Icon.png</include>
          <include>cross.png</include>
          <include>crossingPoints_Icon.png</include>
          <include>eye_closed.png</include>
          <include>eye_open.png</include>
          <include>gearth.jpeg</include>
          <include>pedestrian_sign.jpeg</include>
          <include>pedestrian_sign40x40.jpg</include>
          <include>PODs_Icon.png</include>
          <include>remove_layer.png</include>
          <include>rings_Icon.png</include>
          <include>roads_Icon.png</include>
          <include>style_layer.png</include>
          <include>tick.png</include>
          <include>DatabaseSettings.txt</include>
          <include>settings.txt</include>
          <include>Settings.txt</include>
          <include>Settings2.txt</include>
          <include>podanalyzer_settings.txt</include>
          <include>Analyzer.jar</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.0.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>1.3.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>edu.unt.cerl.replan.REPLAN</Main-Class>
                  </manifestEntries>
                </transformer>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>resourcesIncluded</id>
      <build>
        <resources>
          <resource>
            <directory>${basedir}</directory>
            <includes>
              <include>blankSpace.png</include>
              <include>catchment_Icon.png</include>
              <include>censusBlocks_Icon.png</include>
              <include>countyOutline_Icon.png</include>
              <include>cross.png</include>
              <include>crossingPoints_Icon.png</include>
              <include>eye_closed.png</include>
              <include>eye_open.png</include>
              <include>gearth.jpeg</include>
              <include>pedestrian_sign.jpeg</include>
              <include>pedestrian_sign40x40.jpg</include>
              <include>PODs_Icon.png</include>
              <include>remove_layer.png</include>
              <include>rings_Icon.png</include>
              <include>roads_Icon.png</include>
              <include>style_layer.png</include>
              <include>tick.png</include>
              <include>DatabaseSettings.txt</include>
              <include>settings.txt</include>
              <include>Settings.txt</include>
              <include>Settings2.txt</include>
              <include>podanalyzer_settings.txt</include>
              <include>Analyzer.jar</include>
            </includes>
          </resource>
        </resources>
        <plugins>
          <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>2.0.2</version>
            <configuration>
              <source>1.6</source>
              <target>1.6</target>
            </configuration>
          </plugin>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>1.3.1</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <transformers>
                    <transformer>
                      <manifestEntries>
                        <Main-Class>edu.unt.cerl.replan.REPLAN</Main-Class>
                      </manifestEntries>
                    </transformer>
                    <transformer />
                  </transformers>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>maven2-repository.dev.java.net</id>
      <name>Java.net repository</name>
      <url>http://download.java.net/maven/2</url>
    </repository>
    <repository>
      <id>osgeo</id>
      <name>Open Source Geospatial Foundation Repository</name>
      <url>http://download.osgeo.org/webdav/geotools/</url>
    </repository>
    <repository>
      <snapshots />
      <id>opengeo</id>
      <name>OpenGeo Maven Repository</name>
      <url>http://repo.opengeo.org/</url>
    </repository>
    <repository>
      <id>central</id>
      <url>http://repo1.maven.org/maven2/</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <geotools.version>8.7</geotools.version>
  </properties>
</project>

